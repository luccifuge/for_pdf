import pdfplumber
import pandas as pd

def vse_tablisi(pdf, csv):
    with pdfplumber.open(pdf) as pdf:

        result = []
        for page in pdf.pages:
            table = page.extract_table()
            if table:

                df = pd.DataFrame(table[1:], columns=table[0])
                result.append(df)

        if result:
            last = pd.concat(result, ignore_index=True)

            last.to_csv(csv, index=False)
            print(f"Все ок {csv}")
        else:
            print("нет таблиц")

pdf = "FS IFRS Rus 0624 disclosed.pdf"
csv = "test.csv.csv"
vse_tablisi(pdf, csv)
